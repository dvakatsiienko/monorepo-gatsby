{
    "name": "gatsby-monorepo",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "gatsby develop",
        "run:blog": "yarn workspace @gatsby-monorepo/blog run dev",
        "run:shop": "yarn workspace @gatsby-monorepo/shop run dev",
        "run:all": "npm-run-all --parallel run:blog run:shop",
        "build": "gatsby build",
        "test": "jest test --config ./json-config.json"
    },
    "dependencies": {
        "gatsby-plugin-react-helmet": "4.2.0",
        "gatsby-source-filesystem": "3.2.0",
        "gatsby-transformer-json": "3.2.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-helmet": "6.1.0",
        "styled-components": "5.2.3"
    },
    "devDependencies": {
        "@babel/preset-env": "7.13.15",
        "@babel/preset-react": "7.13.13",
        "babel-jest": "26.6.3",
        "babel-preset-gatsby": "1.2.0",
        "enzyme": "3.11.0",
        "enzyme-adapter-react-16": "1.15.6",
        "gatsby-plugin-styled-components": "4.2.0",
        "lerna": "4.0.0",
        "npm-run-all": "4.1.5",
        "scripty": "2.0.0"
    }
}
